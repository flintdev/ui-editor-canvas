{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "target": "es2017",
        "allowJs": true,
        "resolveJsonModule": true,
        "declaration": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "src": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}