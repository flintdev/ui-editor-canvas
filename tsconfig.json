{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "types": ["node"],
      "lib": ["es6", "dom"],
      "noImplicitAny": false,
      "noImplicitThis": false,
      "strictNullChecks": true,
      "module": "commonjs",
      "target": "es2017",
      "allowJs": true,
      "esModuleInterop": true,
      "declaration": true,
      "jsx": "react",
      "baseUrl": "./src",
      "typeRoots": ["./src/typings.d.ts"],
      "paths": {
        "src": ["src/*"],
        "example": ["example/*"]
      }
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.d.ts",
      "src/**/*.yaml",
      "src/**/*.less",
      "node_modules/@types/node/globals.d.ts"
    ]
  }